@using Beryllium.Models
@model IEnumerable<Work>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Works</h4>
            <a class="btn btn-success" asp-action="Create">Create New Work</a>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                               Location
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var work in Model)
                        {
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                   <img src=" @work.Image" />
                                </td>
                                <td>
                                    @work.Title
                                </td>
                                <td>
                                    @work.Location
                                </td>
                                <td>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@work.Id"> <i class="fa-solid fa-trash" style="color:white;"></i></a>
                                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@work.Id"><i class="fa-solid fa-pen" style="color:white;"></i></a>
                                </td>

                            </tr>
                            count++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>