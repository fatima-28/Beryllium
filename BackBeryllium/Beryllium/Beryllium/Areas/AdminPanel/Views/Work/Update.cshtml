@using Beryllium.Models
@model Work
@{
    ViewData["Title"] = "Update";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit work</h4>

            <form class="forms-sample" method="post">
                <div class="form-group row">
                    <label asp-for="Photo" class="col-sm-3 col-form-label">Image</label>
                    <div class="col-sm-9">
                        <input class="form-control" asp-for="Photo">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label" asp-for="Title">Title</label>
                    <div class="col-sm-9">
                        <input class="form-control" asp-for="Title">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputMobile" class="col-sm-3 col-form-label" asp-for="Location">Location</label>
                    <div class="col-sm-9">
                        <input asp-for="Location" class="form-control" placeholder="Location">
                        <span class="text-danger" asp-validation-for="Location"></span>
                    </div>
                </div>


                <button type="submit" class="btn btn-warning me-2">Update</button>
                <button class="btn btn-light" asp-action="Index">Cancel</button>
            </form>
        </div>
    </div>
</div>


